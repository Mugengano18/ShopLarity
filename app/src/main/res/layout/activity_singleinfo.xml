<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".models.Singleinfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/image2"
            android:src="@drawable/homeimg"
            android:scaleType="centerCrop"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="Name of the store"
            android:id="@+id/store"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="categories"
            android:layout_marginLeft="160dp"
            android:id="@+id/cat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rating"
            android:layout_marginLeft="350dp"
            android:id="@+id/rate"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple"
            >

            <Button
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimaryDark"
                android:text="Add to favorite"
                android:id="@+id/saveButton" />

            <Button
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimaryDark"
                android:text="Get help"
                android:id="@+id/help"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get more info"
                android:id="@+id/websiteTextView"
                android:drawableLeft="@drawable/ic_pageview_black_24dp"
                android:drawablePadding="4dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call for more"
                android:id="@+id/PhoneText"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawablePadding="4dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="find the store"
                android:id="@+id/ExactLocation"
                android:drawableLeft="@drawable/ic_map_black_24dp"
                android:drawablePadding="4dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="60dp"/>




        </RelativeLayout>



    </LinearLayout>
</RelativeLayout>